services:
  cms:
    container_name: tmp
    build:
      context: .
    ports:
      - 3333:3333
      - 9229:9229
      - 8080:8080
    env_file:
      - .env
    environment:
      - DB_HOST=host.docker.internal
      - NODE_ENV=production
      - HOST=0.0.0.0
